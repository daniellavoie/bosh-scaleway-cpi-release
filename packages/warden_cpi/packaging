set -e -x

if [ -z "$BOSH_PACKAGES_DIR" ]; then
	pkg_dir=$(readlink -nf /var/vcap/packages/golang-1.8-linux)
else
	pkg_dir=$BOSH_PACKAGES_DIR/golang-1.8-linux
fi

source ${pkg_dir}/bosh/compile.env

mkdir ../src && cp -a * ../src/ && mv ../src ./src

mkdir $BOSH_INSTALL_TARGET/bin

go build -o $BOSH_INSTALL_TARGET/bin/cpi src/github.com/cppforlife/bosh-scaleway-cpi/main/*.go
